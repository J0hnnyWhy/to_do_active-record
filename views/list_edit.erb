<h1>Update <%=@list.name() %></h1>

<form action="/lists/<%= @list.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Rename your list:</label>
  <input id="name" name="name" type="text">

  <button class="submit">Update List</button>
</form>


<p>Delete a list</p>
<br>
<form action="/lists/<%= @list.id() %>" method="post">
  <label for="deleted">Remove list: </label>
  <input name="_method" type="hidden" value="delete" id="deleted">

  <button type="submit">Delete List</button>
</form>
