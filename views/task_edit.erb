<h1>Update <%=@task.description() %></h1>

<form action="/tasks/<%= @task.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="description">Edit your task:</label>
  <input id="description" name="description" type="text">

  <button class="submit">edit Task</button>
</form>
<br>

<p>Delete a task</p>
<form action="/tasks/<%= @task.id() %>" method="post">
  <label for="deleted">Remove task from list: </label>
  <input name="_method" type="hidden" value="delete" id="deleted">

  <button type="submit">Delete task</button>
</form>
